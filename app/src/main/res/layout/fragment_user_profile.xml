<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activities.LoginAndStarting.user_profile"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/editprofile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#0E1C36"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:gravity="center_horizontal"
                android:text="Profile"
                android:textAlignment="center"

                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/userimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/editprofile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        app:civ_border_width="2dp"
        />
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/editimage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/edit_image"
            android:layout_below="@+id/userimage"
            android:layout_toRightOf="@+id/userimage"
            android:layout_marginLeft="-20dp"
            android:layout_marginTop="-33dp"
            app:civ_circle_background_color="#0E1C36"
            app:civ_border_width="1dp"
            app:civ_border_color="#0E1C36"
            />
    <TextView
        android:id="@+id/emailaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address : "
        android:textSize="20sp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/userimage"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/emailaddresstextview"
        android:layout_below="@id/emailaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#575757"
        android:layout_marginHorizontal="20dp"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_marginTop="13dp"
        />
    <ProgressBar
        android:id="@+id/userprofileprogressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailaddresstextview"/>
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username : "
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/emailaddress"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/usernametextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="13dp"
        android:textColor="#575757"
        android:textSize="18sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/username1"
        android:layout_below="@id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textSize="15sp"
        android:textStyle="italic"

        />
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/editusername"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/edit_image"
        android:layout_below="@id/username"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        app:civ_circle_background_color="#0E1C36"
        app:civ_border_width="1dp"
        app:civ_border_color="#0E1C36"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/medicaldetialss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medical Details : "
        android:textSize="20sp"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/username"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:id="@+id/medicaldetialsinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medicaldetialss"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="13dp"
        android:textColor="#575757"
        android:textSize="18sp"
        android:textStyle="italic"
        android:text="sampledetails"/>

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/editmedicaldetails"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/edit_image"
        android:layout_below="@+id/medicaldetialss"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        app:civ_circle_background_color="#0E1C36"
        app:civ_border_width="1dp"
        app:civ_border_color="#0E1C36"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/Save"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonbg2"
        android:layout_below="@+id/username"
        android:layout_marginTop="230dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#636363"
        />
    <Button
        android:id="@+id/logout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:background="@drawable/buttonbg2"
        android:layout_below="@+id/username"
        android:layout_marginTop="230dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/white"
        />
</RelativeLayout>