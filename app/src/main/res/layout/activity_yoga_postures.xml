<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AllPosture.Yoga_postures"
    android:background="#6FC5D5EA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/allpostures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#0E1C36"
                android:layout_marginHorizontal="1dp"
                android:layout_marginLeft="1dp"
                app:cardCornerRadius="20dp"
                >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="All "
            android:textSize="18dp"
            android:fontFamily="@font/roboto_slab"
            android:textColor="#ffff"
            android:textAlignment="center"
            android:gravity="center"

            />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/recommendedpostures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:cardBackgroundColor="#C5D5EA"
                android:layout_marginHorizontal="1dp"
                android:layout_marginRight="1dp"
                app:cardCornerRadius="20dp">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Recommended "
            android:textSize="18dp"
            android:textColor="#ffff"
            android:gravity="center"
            android:fontFamily="@font/roboto_slab"
            />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    <FrameLayout
        android:id="@+id/yoganavigator"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        />

</RelativeLayout>